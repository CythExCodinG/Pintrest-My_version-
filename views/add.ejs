<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-800 p-6">
    <h2 class="text-2xl text-white font-semibold mt-5 p-2">Create a new post</h2>
    <hr class="mt-2 border-1 w-2/5 text-white opacity-50">
    <form action="/createpost" method="post" enctype="multipart/form-data">
      <br>
      <input class="w-1/3 block text-white p-2 rounded-md mt-2" type="file" name="postimage">
      <input class="w-1/3 border-2 border-blue-800 block bg-white p-2 rounded-md mt-2" type="text" name="title"
        placeholder="Title">
      <textarea class="w-1/3 border-2 max-h-40 min-h-40 border-blue-800 block bg-white p-2 rounded-md mt-2" type="text"
        name="description" placeholder="Description"></textarea>
      <input class="w-1/3 text-center capitalize p-2 text-md font-semibold bg-red-500 mt-2 rounded-lg" type="submit"
        value="Create new post">
    </form>
  </div>


