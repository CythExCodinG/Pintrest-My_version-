<% include ./partials/header.ejs %>
  <div
    class="w-full h-screen bg-[url('https://images.pexels.com/photos/262367/pexels-photo-262367.jpeg')] bg-center bg-cover bg-no-repeat flex justify-center items-center">
    <div class="w-[25vw] bg-zinc-200 rounded-md px-20 py-5">
      <h1
        class="block text-zinc-700 capitalize tracking-tighter text-3xl font-medium mt-5 leading-none align-center text-center">
        Register your account</h1>
      <form action="">
        <input class="block bg-zinc-100 border-2  w-full mt-5 px-3 py-2 rounded-md" type="text" name="username"
          placeholder="Enter Username">
        <input class="block bg-zinc-100 border-2  w-full mt-5 px-3 py-2 rounded-md" type="email" name="email"
          placeholder="Enter Email">
        <input class="block bg-zinc-100 border-2  w-full mt-5 px-3 py-2 rounded-md" type="number" name="contact"
          placeholder="Enter contact number">
        <input class="block bg-zinc-100 border-2 w-full mt-5 px-3 py-2 rounded-md" type="password" name="password"
          placeholder="Enter Password">
        <input class="block w-full bg-red-600 align-center mt-5 px-3 py-2 rounded-full text-white" type="submit"
          value="Register">
        <p class="text-xs font-semibold mt-5 w-3/4 text-center mx-auto">By continuing, you agree to Pinterest's Terms
          of
          Service
          and
          acknowledge
          you've read our
          Privacy Policy.</p>
        <p class="text-xs font-bold mt-2 text-center">Already a user? <a href="/">Sign-in</a></p>
      </form>
    </div>
  </div>

  <% include ./partials/footer.ejs %>